    "name": "terraria-server",
    "version": "1.0.0",
    "description": "Run terraria servers on NodeJS",
    "scripts": {
        "build": "chmod -R 777 server/",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write .",
        "start": "chmod -R 777 server/ && chmod -R 777 ./ && sh -c \"ts-node src --start\" && \"node_modules/ngrok/bin/ngrok.exe\" http 8080"
    },
    "keywords": [
        "terraria",
        "dedicated",
        "server",
        "terraria-server",
        "dedicated-server"
    ],
    "dependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/command-line-args": "^5.0.0",
        "@types/express": "^4.17.9",
        "@types/ip": "^1.1.0",
        "@types/node": "^14.0.27",
        "@types/request": "^2.48.5",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "adm-zip": "^0.4.16",
        "colors": "^1.4.0",
        "command-line-args": "^5.1.1",
        "dotenv": "^8.2.0",
        "eslint": "^7.7.0",
        "express": "^4.17.1",
        "ip": "^1.1.5",
        "ngrok": "^4.0.1",
        "prettier": "^2.0.5",
        "request": "^2.88.2",
        "rimraf": "^3.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "engines": {
        "node": "14.x"
    }
}
